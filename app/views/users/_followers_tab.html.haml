%h2 Followers
.user-friends
  - if user.followers.size == 0
    %span.empty-list #{current_user == user ? 'You don\'t' : user.name + ' doesn\'t' } have any followers
  %ul
    - user.followers.each do |friend|
      %li
        .user-friend-thumb
          .friend-icon
            = link_to user_path(friend), class: "btn" do
              - unless friend.avatar.file.nil?
                = image_tag(friend.avatar_url(:thumb).to_s)
              - else
                %span.glyphicon.glyphicon-user
          .friend-details
            %h5
              = link_to "#{friend.name}", user_path(friend)
            %h6 #{ friend.city.format_city_state }
            .friend-thumb-stats
              .friend-thumb-stat
                %span.glyphicon.glyphicon-user
                %span <b>#{friend.all_friends.count}</b>
              .friend-thumb-stat
                %span.glyphicon.glyphicon-star-empty
                %span <b>#{friend.reviews.count}</b>
